---
import type { CollectionEntry } from 'astro:content';
const { entry } = Astro.props as { entry: CollectionEntry<'sessions'> };
const { data, slug } = entry;
---
<a href={`/sessioni/${slug}`} class="card">
  {data.cover && <img src={data.cover} alt={data.title} loading="lazy" />}
  <div class="body">
    <h3>{data.title}</h3>
    <p>{data.summary}</p>
    <small>Sessione {data.sessionNumber} â€¢ {new Date(data.pubDate).toLocaleDateString()}</small>
  </div>
</a>
<style>
  .card { display: grid; gap: .75rem; text-decoration: none; color: inherit; }
  img { width: 100%; border-radius: 10px; }
  .body h3 { margin: 0; }
  .body p { margin: .25rem 0 .5rem; opacity: .9; }
  small { opacity: .7; }
</style>
