---
interface ImageItem { src: string; alt: string }
const { images = [] } = Astro.props as { images: ImageItem[] };
---
<div class="gallery">
  {images.map((img) => (
    <figure>
      <img src={img.src} alt={img.alt} loading="lazy" decoding="async" />
      <figcaption>{img.alt}</figcaption>
    </figure>
  ))}
</div>
<style>
  .gallery { display: grid; gap: 1rem; grid-template-columns: repeat(auto-fill,minmax(240px,1fr)); }
  img { width: 100%; height: auto; border-radius: 8px; }
  figcaption { font-size: .9rem; opacity: .8; margin-top: .25rem; }
</style>
